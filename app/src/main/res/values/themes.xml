<resources>
    <!-- Base application theme. -->
    <style name="Theme.FinGrow" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    
    <style name="Theme.FinGrow.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <style name="Theme.FinGrow.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.FinGrow.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo_full</item>
        <item name="postSplashScreenTheme">@style/Theme.FinGrow</item>  # Required.
    </style>

    <style name="MyMaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/color_states_materialbutton</item>
    </style>

    <style name="MyMaterialButtonOutlineStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/color_states_materialbuttonoutline</item>
        <item name="strokeColor">@color/mint</item>
    </style>

    <style name="MySingleMaterialButtonOutlineStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/color_states_singlematerialbuttonoutline</item>
        <item name="strokeColor">@color/mint</item>
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="InterestedToggle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="backgroundTint">@color/interested_toggle_backgroundtint</item>
    </style>

</resources>