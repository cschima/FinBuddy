<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbarThumbVertical="@color/black_30"
    tools:context=".ui.onboarding.OnboardingDebtFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bevietnampro_semibold"
            android:text="@string/are_you_dealing_with_any_debt"
            android:textAlignment="center"
            android:textColor="@color/like_black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/bevietnampro_regular"
            android:text="@string/this_well_help_us_understand_your_unique_financial_situation"
            android:textAlignment="center"
            android:textColor="@color/dark_grey"
            android:textSize="12sp" />

        <com.example.fingrow.ui.CustomMaterialButtonToggleGroup
            android:id="@+id/toggleGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:singleSelection="true">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/firstOption"
                style="@style/MyMaterialButtonOutlineStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevietnampro_regular"
                android:insetTop="10dp"
                android:insetBottom="10dp"
                android:padding="14dp"
                android:text="@string/yes"
                android:textAllCaps="false"
                android:textColor="@color/like_black"
                android:textSize="14sp"
                android:theme="@style/Widget.AppCompat.Button.Borderless"
                app:rippleColor="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/secondOption"
                style="@style/MyMaterialButtonOutlineStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevietnampro_regular"
                android:insetTop="10dp"
                android:insetBottom="10dp"
                android:padding="14dp"
                android:text="@string/no"
                android:textAllCaps="false"
                android:textColor="@color/like_black"
                android:textSize="14sp"
                android:theme="@style/Widget.AppCompat.Button.Borderless"
                app:rippleColor="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/thirdOption"
                style="@style/MyMaterialButtonOutlineStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevietnampro_regular"
                android:insetTop="10dp"
                android:insetBottom="10dp"
                android:padding="14dp"
                android:text="@string/not_sure_yet"
                android:textAllCaps="false"
                android:textColor="@color/like_black"
                android:textSize="14sp"
                android:theme="@style/Widget.AppCompat.Button.Borderless"
                app:rippleColor="@null" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fourthOption"
                style="@style/MyMaterialButtonOutlineStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bevietnampro_regular"
                android:insetTop="10dp"
                android:insetBottom="10dp"
                android:padding="14dp"
                android:text="@string/prefer_not_to_say"
                android:textAllCaps="false"
                android:textColor="@color/like_black"
                android:textSize="14sp"
                android:theme="@style/Widget.AppCompat.Button.Borderless"
                app:rippleColor="@null" />
        </com.example.fingrow.ui.CustomMaterialButtonToggleGroup>
    </LinearLayout>
</ScrollView>