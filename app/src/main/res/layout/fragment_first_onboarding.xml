<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.onboarding.FirstOnboardingFragment"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What brings you to FinGrow?"
        android:textColor="@color/like_black"
        android:textSize="14sp"
        android:fontFamily="@font/bevietnampro_semibold"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select your financial priorities below so we can help personalize your experience!"
        android:textColor="@color/dark_grey"
        android:textSize="12sp"
        android:fontFamily="@font/bevietnampro_regular"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"/>

    <com.example.fingrow.CustomMaterialButtonToggleGroup
        android:id="@+id/toggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:singleSelection="false"
        app:selectionRequired="true">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/firstOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:padding="14dp"
            android:text="Manage my financial plan or budget"
            android:textSize="14sp"
            android:fontFamily="@font/bevietnampro_regular"
            android:textColor="@color/like_black"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            style="@style/MyMaterialButtonOutlineStyle"
            app:rippleColor="@null"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/secondOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:padding="14dp"
            android:text="Track my income and spending"
            android:textSize="14sp"
            android:fontFamily="@font/bevietnampro_regular"
            android:textColor="@color/like_black"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            style="@style/MyMaterialButtonOutlineStyle"
            app:rippleColor="@null" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/thirdOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:padding="14dp"
            android:text="Get advice on tax and investments"
            android:textSize="14sp"
            android:fontFamily="@font/bevietnampro_regular"
            android:textColor="@color/like_black"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            style="@style/MyMaterialButtonOutlineStyle"
            app:rippleColor="@null" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fourthOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:padding="14dp"
            android:text="Save for long/short term financial goals"
            android:textSize="14sp"
            android:fontFamily="@font/bevietnampro_regular"
            android:textColor="@color/like_black"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            style="@style/MyMaterialButtonOutlineStyle"
            app:rippleColor="@null"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/fifthOption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:insetTop="10dp"
            android:insetBottom="10dp"
            android:padding="14dp"
            android:text="Something else"
            android:textSize="14sp"
            android:fontFamily="@font/bevietnampro_regular"
            android:textColor="@color/like_black"
            android:textAllCaps="false"
            android:theme="@style/Widget.AppCompat.Button.Borderless"
            style="@style/MyMaterialButtonOutlineStyle"
            app:rippleColor="@null"/>
    </com.example.fingrow.CustomMaterialButtonToggleGroup>
</LinearLayout>